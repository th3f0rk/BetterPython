{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BetterPython",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [{
        "name": "comment.line.number-sign.betterpython",
        "match": "#.*$"
      }]
    },
    "keywords": {
      "patterns": [{
        "name": "keyword.control.betterpython",
        "match": "\\b(def|let|if|elif|else|while|return|and|or|not)\\b"
      }, {
        "name": "constant.language.betterpython",
        "match": "\\b(true|false)\\b"
      }]
    },
    "types": {
      "patterns": [{
        "name": "storage.type.betterpython",
        "match": "\\b(int|str|bool|void)\\b"
      }]
    },
    "functions": {
      "patterns": [{
        "name": "entity.name.function.betterpython",
        "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
      }]
    },
    "strings": {
      "patterns": [{
        "name": "string.quoted.double.betterpython",
        "begin": "\"",
        "end": "\"",
        "patterns": [{
          "name": "constant.character.escape.betterpython",
          "match": "\\\\."
        }]
      }]
    },
    "numbers": {
      "patterns": [{
        "name": "constant.numeric.betterpython",
        "match": "\\b-?[0-9]+\\b"
      }]
    },
    "operators": {
      "patterns": [{
        "name": "keyword.operator.betterpython",
        "match": "(\\+|-|\\*|/|%|==|!=|<|<=|>|>=|=)"
      }, {
        "name": "keyword.operator.arrow.betterpython",
        "match": "->"
      }]
    }
  },
  "scopeName": "source.betterpython"
}

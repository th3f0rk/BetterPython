{
  "name": "betterpython-vscode",
  "displayName": "BetterPython",
  "description": "Language support for BetterPython",
  "version": "1.0.0",
  "publisher": "betterpython",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:betterpython"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "betterpython",
      "aliases": ["BetterPython", "betterpython"],
      "extensions": [".bp"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "betterpython",
      "scopeName": "source.betterpython",
      "path": "./syntaxes/betterpython.tmLanguage.json"
    }],
    "commands": [{
      "command": "betterpython.run",
      "title": "BetterPython: Run File"
    }, {
      "command": "betterpython.compile",
      "title": "BetterPython: Compile File"
    }],
    "configuration": {
      "type": "object",
      "title": "BetterPython",
      "properties": {
        "betterpython.compilerPath": {
          "type": "string",
          "default": "bpcc",
          "description": "Path to bpcc compiler"
        },
        "betterpython.vmPath": {
          "type": "string",
          "default": "bpvm",
          "description": "Path to bpvm virtual machine"
        },
        "betterpython.lspPath": {
          "type": "string",
          "default": "",
          "description": "Path to LSP server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}

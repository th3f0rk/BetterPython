{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(def|if|elif|else|while).*:\\s*$",
    "decreaseIndentPattern": "^\\s*(return|elif|else)\\b.*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*def\\s+\\w+\\(.*\\)\\s*->\\s*\\w+:\\s*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*(if|elif|else|while).*:\\s*$",
      "action": { "indent": "indent" }
    }
  ]
}

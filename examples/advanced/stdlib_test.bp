def main() -> int:
    print("====================================")
    print("BetterPython Production Stdlib Test")
    print("====================================")
    print("")
    
    print("=== MATH FUNCTIONS ===")
    print("abs(-42):", abs(-42))
    print("min(10, 20):", min(10, 20))
    print("max(10, 20):", max(10, 20))
    print("pow(2, 8):", pow(2, 8))
    print("sqrt(144):", sqrt(144))
    print("")
    
    print("=== STRING OPERATIONS ===")
    let text: str = "  Hello World  "
    print("Original:", text)
    print("str_upper:", str_upper(text))
    print("str_lower:", str_lower(text))
    print("str_trim:", str_trim(text))
    print("")
    
    let msg: str = "Hello, World!"
    print("Message:", msg)
    print("starts_with Hello:", starts_with(msg, "Hello"))
    print("starts_with Bye:", starts_with(msg, "Bye"))
    print("ends_with World!:", ends_with(msg, "World!"))
    print("ends_with Nope:", ends_with(msg, "Nope"))
    print("str_find World:", str_find(msg, "World"))
    print("str_find xyz:", str_find(msg, "xyz"))
    print("str_replace World -> Universe:", str_replace(msg, "World", "Universe"))
    print("")
    
    print("=== RANDOM NUMBERS ===")
    rand_seed(42)
    print("rand():", rand())
    print("rand():", rand())
    print("rand_range(1, 10):", rand_range(1, 10))
    print("rand_range(1, 10):", rand_range(1, 10))
    print("rand_range(1, 10):", rand_range(1, 10))
    print("")
    
    print("=== FILE OPERATIONS ===")
    let test_file: str = "/tmp/betterpython_test.txt"
    print("Writing to:", test_file)
    let write_ok: bool = file_write(test_file, "Hello from BetterPython!")
    print("Write success:", write_ok)
    print("File exists:", file_exists(test_file))
    let content: str = file_read(test_file)
    print("Content:", content)
    let append_ok: bool = file_append(test_file, "\nLine 2")
    print("Append success:", append_ok)
    let content2: str = file_read(test_file)
    print("After append:", content2)
    let del_ok: bool = file_delete(test_file)
    print("Delete success:", del_ok)
    print("File exists after delete:", file_exists(test_file))
    print("")
    
    print("=== SYSTEM OPERATIONS ===")
    print("Getting USER env var:", getenv("USER"))
    print("Sleep test - sleeping 100ms...")
    let start: int = clock_ms()
    sleep(100)
    let end: int = clock_ms()
    print("Slept for:", end - start, "ms")
    print("")
    
    print("====================================")
    print("All stdlib functions working!")
    print("Production-grade standard library")
    print("====================================")
    
    return 0
